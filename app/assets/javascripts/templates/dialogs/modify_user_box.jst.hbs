<div class="modal-dialog">
  <div class="modal-content">
    {{#if ajaxContentLoaded }}
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="modifyUserModal">{{{ t "user.titles.modify_my" }}}</h4>
      </div>
      <form method="POST" action="{{ basePath }}users/{{ ajaxContent.username }}"
          accept-charset="UTF-8" id="modify_form" class="ajform form-horizontal" role="form">
        <div class="modal-body">
          <div class="form-group">
            <label for="username" class="control-label col-sm-4">
              {{{ t "user.username" }}}
            </label>
            <div class="col-sm-8">
              <input class="form-control" name="username" type="text"
                  value="{{ ajaxContent.username }}" id="username" disabled='true'>
            </div>
          </div>
          <div class="form-group">
            <label for="ol_password" class="control-label col-sm-4">
              {{{ t "user.old_password" }}}
            </label>
            <div class="col-sm-8">
              <input class="form-control" name="ol_password" type="password" value=""
                  id="ol_password">
            </div>
          </div>
          <div class="form-group">
            <label for="password" class="control-label col-sm-4">
              {{{ t "user.password" }}}
            </label>
            <div class="col-sm-8">
              <input class="form-control" name="password" type="password" value="" id="password">
            </div>
          </div>
          <div class="form-group">
            <label for="repassword" class="control-label col-sm-4">
              {{{ t "user.re_password" }}}
            </label>
            <div class="col-sm-8">
              <input class="form-control" name="repassword" type="password" value=""
                  id="repassword">
            </div>
          </div>
          <div class="form-group">
            <label for="nickname" class="control-label col-sm-4">
              {{{ t "user.nickname" }}}
            </label>
            <div class="col-sm-8">
              <input class="form-control" name="nickname" type="text"
                  value="{{ ajaxContent.nickname }}" id="nickname">
            </div>
          </div>
          <div class="form-group">
            <label for="school" class="control-label col-sm-4">
              {{{ t "user.school" }}}
            </label>
            <div class="col-sm-8">
              <input class="form-control" name="school" type="text" value="{{ ajaxContent.school }}"
                  id="school">
            </div>
          </div>
          <div class="form-group">
            <label for="email" class="control-label col-sm-4">{{{ t "user.email" }}}</label>
            <div class="col-sm-8">
              <input class="form-control" name="email" type="email" value="{{ ajaxContent.email }}"
                  id="email"> 
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <span id="msgbox" style="display:none"></span>
          <input class="btn btn-primary" type="submit" value="{{{ t "global.links.modify" }}}">
        </div>
        <input type='hidden' name='_method' value='put'>
      </form>
    {{else}}
      <div class="modal-body">
        {{{ ajaxLoadingHtml }}}
      </div>
    {{/if}}
  </div>
</div>
