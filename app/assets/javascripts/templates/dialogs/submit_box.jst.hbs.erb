<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title" id="modal-title">{{ title }}</h4>
    </div>
    <form method="POST" action="{{ basePath }}statuses" accept-charset="UTF-8"
        id="problem_submit_form" class="ajform form-horizontal" role="form">
      <div class="modal-body">
        <input type="hidden" name="status[pid]" value="{{ pid }}" />
        <input type="hidden" name="status[contest_belong]" value="{{ cid }}" />
        <div class="form-group">
          <label for="languageSelect" class="col-sm-3 control-label">
            {{ t "status.lang" }}
          </label>
          <div class="col-sm-9">
            <select id="languageSelect" class="form-control" name="status[language]">
              <% LanguageName.all.each do |language| %>
                <option value="<%= language.id %>"><%= language.name %></option>
              <% end %>
            </select>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label">{{ t "status.show.is_share" }}</label>
          <div class="col-sm-9">
            <div class="radio-inline">
              <label>
                <input name="status[isshared]" type="radio" value="1" checked />
                {{ t "global.options.yes" }}
              </label>
            </div>
            <div class="radio-inline">
              <label>
                <input name="status[isshared]" type="radio" value="0" />
                {{ t "global.options.no" }}
              </label>
            </div>
          </div>
        </div>
        <textarea rows="12" class="form-control" name="status[source]"
            placeholder="{{ t "global.placeholders.code" }}"></textarea>
      </div>
      <div class="modal-footer">
        <span id="msgbox" style="display:none"></span>
        <input name='login' class="btn btn-primary" type='submit'
            value='{{ t "global.btns.submit" }}' />
      </div>
    </form>
  </div>
</div>
