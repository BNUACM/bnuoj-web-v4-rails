<script type="text/x-mathjax-config">
  MathJax.Hub.Config({
    config: ["MMLorHTML.js"],
    messageStyle: "none",
    jax: ["input/TeX","input/MathML","output/HTML-CSS","output/NativeMML"],
    extensions: ["tex2jax.js", "MathMenu.js","MathZoom.js"],
    TeX: {
      extensions: ["AMSmath.js","AMSsymbols.js","noErrors.js","noUndefined.js"]
    },
    tex2jax: {
      inlineMath: [ ['[tex]','[/tex]'] ]
    }
  });
</script>
<%= javascript_include_tag "MathJax/MathJax" %>
<div class="row">
  <div class="col-sm-12" id="show_problem">
    <h2 class="text-center"> <span class="problem-id"><%= @problem.pid %></span>. <%= @problem.title %> </h2>
    <div class="well text-center">
      <% if @problem.ignore_noc || @problem.time_limit == @problem.case_time_limit %>
        <div class="col-sm-6">Time Limit: <%= @problem.time_limit %> ms</div>
        <div class="col-sm-6">Memory Limit: <%= @problem.memory_limit %> KB</div>
      <% else %>
        <div class="col-sm-4">Time Limit: <%= @problem.time_limit %> ms</div>
        <div class="col-sm-4">Case Time Limit: <%= @problem.case_time_limit %> ms</div>
        <div class="col-sm-4">Memory Limit: <%= @problem.memory_limit %> KB</div>
      <% end %>
      <% if @problem.isvirtual %>
        <p>This problem will be judged on <span class="label label-info"><%= @problem.vname %></span>. Original ID: <a href="<%= @problem.to_url %>" target="_blank"><%= @problem.vid %></a></p>
      <% end %>
      <p>64-bit integer IO format: <span class="label label-primary"><%= @problem.oj_info.int64io %></span> &nbsp;&nbsp;&nbsp;&nbsp; Java class name: <span class="label label-primary"><%= @problem.oj_info.javaclass %></span></p>
      <% if @problem.special_judge_status != 0 %>
        <p><span class="label label-danger">Special Judge</span></p>
      <% end %>
      <% if @problem.hide %>
        <p><b>This problem is hidden.</b></p>
      <% end %>
    </div>
    <div class="text-center problem-actions">
      <div class="btn-group">
        <a href="#" class="submit-problem btn btn-primary">Submit</a>
        <a href="<%= url_for :controller => 'statuses', :action => 'index' %>?pid=<%= @problem.pid %>" class="btn btn-default">Status</a>
        <a href="problem_stat.php?pid=<?=$pid?>" class="btn btn-default">Statistics</a>
        <a href="discuss.php?pid=<?=$pid?>" class="btn btn-default">Discuss</a>
      </div>
      <% if logged_in? && current_user.is_admin? %>
        <a href="admin_index.php?pid=<?=$pid?>#problemtab" class="btn btn-primary">Edit</a>
      <% end %>
    </div>

    <% unless @problem.description.empty? %>
      <div class="content-wrapper well">
        <%= raw @problem.description.gsub(/<style[\s\S]*\/style>/m, '') %>
        <div style="clear:both"></div>
      </div>
    <% end %>

    <% unless @problem.input.empty? %>
      <h3> Input </h3>
      <div class="content-wrapper well">
        <%= raw @problem.input %>
        <div style="clear:both"></div>
      </div>
    <% end %>

    <% unless @problem.output.empty? %>
      <h3> Output </h3>
      <div class="content-wrapper well">
        <%= raw @problem.output %>
        <div style="clear:both"></div>
      </div>
    <% end %>

    <% unless @problem.sample_in.empty? %>
      <h3> Sample Input </h3>
      <% if @problem.sample_in.index("<br").nil? && @problem.sample_in.index("<p").nil? %>
        <pre class="content-wrapper"><%= raw @problem.sample_in %></pre>
      <% else %>
        <div class="content-wrapper well">
          <%= raw @problem.sample_in %>
        </div>
      <% end %>
    <% end %>

    <% unless @problem.sample_out.empty? %>
      <h3> Sample Output </h3>
      <% if @problem.sample_out.index("<br").nil? && @problem.sample_out.index("<p").nil? %>
        <pre class="content-wrapper"><%= raw @problem.sample_out %></pre>
      <% else %>
        <div class="content-wrapper well">
          <%= raw @problem.sample_out %>
        </div>
      <% end %>
    <% end %>

    <% unless @problem.hint.length < 50 && strip_tags(@problem.hint).empty? %>
      <h3> Hint </h3>
      <div class="content-wrapper well">
        <%= raw @problem.hint %>
        <div style="clear:both"></div>
      </div>
    <% end %>

    <% unless @problem.source.empty? %>
      <h3> Source </h3>
      <div class="content-wrapper well">
        <a href="<%= url_for :controller => 'problems', :action => 'index' %>?searchstr=<%= @problem.source %>"><%= @problem.source %></a>
      </div>
    <% end %>

    <% unless @problem.author.empty? %>
      <h3> Author </h3>
      <div class="content-wrapper well">
        <%= raw @problem.author %>
      </div>
    <% end %>

    <% unless @problem.tagged_categories.empty? %>
      <h3> Tags <button class="btn btn-danger" id="tags_toggle">Toggle</button> </h3>
      <div id="problem_tags" class="content-wrapper well" style="display: none">
        <% @problem.tagged_categories.each do |category| %>
          <a style='font-size:<%= (category.weight.to_f)*0.15+90 %>%' href='problem_category_result.php?category=<%= category.catid %>' target='_blank'><%= category.category.name %></a>
        <% end %>
      </div>
    <% end %>

  </div>
</div>

