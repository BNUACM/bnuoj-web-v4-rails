<h1><%= t "message.list_title" %></h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= link_to t("global.show"), message %></td>
        <td><%= link_to t("global.edit"), edit_message_path(message) %></td>
        <td><%= link_to t("global.delete"), message, method: :delete, data: { confirm: t("global.is_sure") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

