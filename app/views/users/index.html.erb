<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to t("global.show"), user %></td>
        <td><%= link_to t("global.edit"), edit_user_path(user) %></td>
        <td><%= link_to t("global.delete"), user, method: :delete, data: { confirm: t("global.is_sure") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

