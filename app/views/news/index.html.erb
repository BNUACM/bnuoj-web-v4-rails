<h1><%= t "news.titles.list" %></h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @news.each do |news| %>
      <tr>
        <td><%= link_to t("global.links.show"), news %></td>
        <td><%= link_to t("global.links.edit"), edit_news_path(news) %></td>
        <td><%= link_to t("global.links.delete"), news, method: :delete, data: { confirm: t("global.prompts.is_sure") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

